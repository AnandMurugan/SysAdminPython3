#!/usr/bin/env python3.7

def get_message_count():
    message = input("Please enter the message to be repeated: " )
    count = int(input("Please enter number of times to be printed: " ).strip()
            or 1)
    return (message, count)

def print_message(message, count):
    iterator = 1

    while iterator<=count:
        print(message)
        iterator += 1

(msg, count) = get_message_count()
print_message(msg, count)
